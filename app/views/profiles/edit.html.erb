<div data-page="basic_info" id="page"></div>
<div class="profile-title-section">
  <div class="container">
    <h2 class="profile-name">
      <%= @profile_form.first_name + " " + @profile_form.last_name + ":" %>
        <span>
          Profile
        </span>
    </h2>
    <div class="clearfix"></div>
  </div>
</div>
<div class="container profile-form-container d-flex">
  <%= form_with model: @profile_form, url: profile_path(@profile), class: 'd-flex', method: :patch do |f| %>
        <!-- <div>
      <label>Categories</label>
      <%= f.collection_select :category_ids, @categories, :id, :name, {}, { multiple:"multiple", class: 'selectpicker', 'data-live-search':"true" } %>
    </div> -->
    <% if @tab == 'basic_info' %>
      <div class="row">
      <div class="col-sm-3">
        <%= render 'shared/profile_navigation', locals: {link: @tab} %>
      </div>
      <div class="col-sm-9">
        <h4 class="card-form-title mt-3">
          Basic Information
        </h4>
        <div class="card card-form">
          <div class="card-body">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label>First Name</label>
                <%= f.text_field :first_name, :class => "form-control" %>
              </div>
              <div class="form-group col-md-6">
                <label>Last Name</label>
                <%= f.text_field :last_name, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label>Display Name</label>
              <%= f.text_field :name, :class => "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label "Title" %>
              <%= f.text_field :title, :class=> ("form-control"), :placeholder => "e.g. Market Research Analyst focused on Healthcare using Qualitative Methods" %>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label>Professional Role</label>
                <input type="text" class="form-control">
              </div>
              <div class="form-group col-md-6">
                <label>Years of Professional Experience</label>
                <%= f.text_field :years_of_experience, :class => "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <label>
                Profile Picture
              </label>
              <div class="image-place" id="user_photo_drop_zone">
                <div class="file-input-wrapper">
                  <button class="btn-file-input btn">
                    <span>
                      Drop file here or
                    </span>
                    Browse
                    <span>
                      to add attachments
                    </span>
                  </button>
                  <%= f.file_field :photo %>
                </div>
              </div>
            </div>
            <div class="form-check form-group">
              <input type="checkbox" class="form-check-input">
              <label class="form-check-label">
                I am interested in providing mentorship and advisory services on Expercoin's on-demand learning and mentorship platform.
              </label>
            </div>
            <div class="form-check form-group">
              <input type="checkbox" class="form-check-input">
              <label class="form-check-label">
                  I am interested in being recommended for the full-time positions?
              </label>
            </div>
          </div>
        </div>
        <h4 class="card-form-title">
          <span class="rate"></span>
          Minimum Minute Rate
        </h4>
        <div class="card card-form">
          <div class="card-body">
            <div class="row form-group">
              <div class="col-sm-3 offset-md-2">
                  <label>Expercoin Rate:</label>
              </div>
              <div class="col-sm-4">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">EXPR</span>
                  </div>
                  <%= f.text_field :expercoin_rate,'data-rate': 'expercoin', 'data-fee': @profile.commission_fee, :class => "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
                <div class="col-sm-3 offset-md-2">
                    <label>My Minute Rate:</label>
                </div>
                <div class="col-sm-4">
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">EXPR</span>
                    </div>
                    <%= f.text_field :rate, class: "form-control", 'data-rate': 'hourly', 'data-fee': @profile.commission_fee %>
                  </div>
                </div>
                <div class="col-sm-3">
                    <p>
                        (<%= @profile.commission_fee %>% commission fee)
                      </p>
                </div>
              </div>
          </div>
        </div>
        <h4 class="card-form-title">
          <span class="location"></span>
          Your Location
        </h4>
        <div class="card card-form">
          <div class="card-body">
            <div class="form-group">
              <label>
                Payment Address
                <i class="fa fa-lock"></i>
                <span class="label-notice">
                  Will not be displayed publicly, but is needed to process your payments.
                </span>
              </label>
              <%= f.text_field :address, :class => "form-control" %>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                  <%= f.label "Country" %>
                  <%= f.text_field :country, :class => "form-control" %>
              </div>
              <div class="form-group col-md-6">
                  <%= f.label "State" %>
                  <%= f.text_field :state, :class => "form-control" %>
              </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <%= f.label "City" %>
                    <%= f.text_field :city, :class => "form-control" %>
                </div>
                <div class="form-group col-md-6">
                    <%= f.label "Zip Code" %>
                    <%= f.text_field :zip_code, :class => "form-control" %>
                </div>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end mb-5">
          <%= f.submit "Save", class: "btn btn-primary btn-wide" %>
        </div>
      </div>
    <% elsif @tab == 'about' %>
      <div class="row">
          <div class="col-sm-3">
            <%= render 'shared/profile_navigation', locals: {link: @tab} %>
          </div>
          <div class="col-sm-9">
            <h4 class="card-form-title mt-3">
              About
            </h4>
            <div class="card card-form">
              <div class="card-body">
                <div class="form-group">
                  <label>
                      About You and Your Service Offerings (Please note this is your marketing pitch)
                  </label>
                  <%= f.text_area :about, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <label>
                      For On-demand Learning and Mentorship, what kind of help you can provide.
                  </label>
                  <p><small class="text-muted">Be descriptive in short sentence. For example: Learn MEthods, Rapid Prototyping of Web Apps or Help you with your Python coding</small></p>
                  <div class="input-group mb-2">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">1</span>
                    </div>
                    <input type="text" class="form-control">
                  </div>
                  <div class="input-group mb-2">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">2</span>
                    </div>
                    <input type="text" class="form-control">
                  </div>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">3</span>
                    </div>
                    <input type="text" class="form-control">
                  </div>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-end mb-5">
              <%= f.submit "Save", :class => "btn btn-primary btn-wide" %>
            </div>
          </div>
      </div>
    <% else %>
      <div class="row">
          <div class="col-sm-3">
            <%= render 'shared/profile_navigation', locals: {link: @tab} %>
          </div>
          <div class="col-sm-9">
            <h4 class="card-form-title mt-3">
              Help People Find You
            </h4>
            <div class="card card-form">
              <div class="card-body">
                <div class="form-group">
                  <label>
                    I am interested in providing mentorship and advisory services on Expercoin's on-demand learning and mentorship platform.
                  </label>
              <label>Categories</label>
              <%= f.collection_select :category_ids, @categories, :id, :name, {}, { multiple:"multiple", class: 'selectpicker', 'data-live-search':"true" } %>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-end mb-5">
              <%= f.submit "Save", :class => "btn btn-primary btn-wide" %>
            </div>
          </div>
      </div>
    <% end %>
  <% end %>
</div>
