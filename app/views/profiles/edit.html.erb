<div data-page="basic_info" id="page"></div>
<%= form_with model: @profile_form, url: profile_path(@profile), method: :patch do |f| %>
    <!-- <div>
  <label>Categories</label>
  <%= f.collection_select :category_ids, @categories, :id, :name, {}, { multiple:"multiple", class: 'selectpicker', 'data-live-search':"true" } %>
</div> -->
    <div class="profile-title-section">
      <div class="container">
        <h2 class="profile-name">
          <%= @profile_form.first_name + " " + @profile_form.last_name + ":" %>
            <span>
              Profile
            </span>
        </h2>
        <div class="clearfix"></div>
      </div>
    </div>
    <% if @tab == 'basic_info' %>
      <div class="container container-type-2">
        <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <div class="col-sm-3">
                <%= render 'shared/profile_navigation', locals: {link: @tab} %>
              </div>
              <div class="col-sm-9">
                <h4 class="card-form-title mt-3">
                  Basic Information
                </h4>
                <div class="card card-form">
                  <div class="card-body">
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label>First Name</label>
                        <%= f.text_field :first_name, :class => "form-control" %>
                      </div>
                      <div class="form-group col-md-6">
                        <label>Last Name</label>
                        <%= f.text_field :last_name, :class => "form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label>Display Name</label>
                      <%= f.text_field :name, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label "Title" %>
                      <%= f.text_field :title, :class=> ("form-control"), :placeholder => "e.g. Market Research Analyst focused on Healthcare using Qualitative Methods" %>
                    </div>
                    <div class="form-row">
                      <div class="form-group col-md-6">
                        <label>Professional Role</label>
                        <input type="text" class="form-control">
                      </div>
                      <div class="form-group col-md-6">
                        <label>Years of Professional Experience</label>
                        <%= f.text_field :years_of_experience, :class => "form-control" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label>
                        Profile Picture
                      </label>
                      <div class="image-place" id="user_photo_drop_zone">
                        <div class="file-input-wrapper">
                          <button class="btn-file-input btn">
                            <span>
                              Drop file here or
                            </span>
                            Browse
                            <span>
                              to add attachments
                            </span>
                          </button>
                          <%= f.file_field :photo %>
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <input type="checkbox">
                      <label>
                        I am interested in providing mentorship and advisory services on Expercoin's on-demand learning and mentorship platform.
                      </label>
                    </div>
                    <div class="form-group">
                      <input type="checkbox">
                      <label>
                          I am interested in being recommended for the full-time positions?
                      </label>
                    </div>
                  </div>
                </div>
                <h4 class="card-form-title">
                  <span class="rate"></span>
                  Minimum Hourly Rate
                </h4>
                <div class="card card-form">
                  <div class="card-body">
                    <div class="row form-group">
                      <div class="col-sm-3 offset-md-2">
                          <label>Expercoin Rate:</label>
                      </div>
                      <div class="col-sm-4">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">EXC</span>
                          </div>
                          <%= f.text_field :expercoin_rate,'data-rate': 'expercoin', 'data-fee': @profile.commission_fee, :class => "form-control" %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3 offset-md-2">
                            <label>My Hourly Rate:</label>
                        </div>
                        <div class="col-sm-4">
                          <div class="input-group">
                            <div class="input-group-prepend">
                              <span class="input-group-text" id="basic-addon1">EXC</span>
                            </div>
                            <%= f.text_field :rate, class: "form-control", 'data-rate': 'hourly', 'data-fee': @profile.commission_fee %>
                          </div>
                        </div>
                        <div class="col-sm-3">
                            <p>
                                (<%= @profile.commission_fee %>% commission fee)
                              </p>
                        </div>
                      </div>
                  </div>
                </div>
                <h4 class="card-form-title">
                  <span class="location"></span>
                  Your Location
                </h4>
                <div class="card card-form">
                  <div class="card-body">
                    <div class="form-group">
                      <label>
                        Payment Address
                        <i class="fa fa-lock"></i>
                        <span class="label-notice">
                          Will not be displayed publicly, but is needed to process your payments.
                        </span>
                      </label>
                      <%= f.text_field :address, :class => "form-control" %>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <%= f.label "Country" %>
                            <%= f.text_field :country, :class => "form-control" %>
                        </div>
                        <div class="form-group col-md-6">
                            <%= f.label "State" %>
                            <%= f.text_field :state, :class => "form-control" %>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <%= f.label "City" %>
                            <%= f.text_field :city, :class => "form-control" %>
                        </div>
                        <div class="form-group col-md-6">
                            <%= f.label "Zip Code" %>
                            <%= f.text_field :zip_code, :class => "form-control" %>
                        </div>
                    </div>
                  </div>
                </div>
                <div class="center">
                  <%= f.submit "Save", class: "btn btn-flat-blue btn-md" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% else %>
      <div class="container container-type-2">
        <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <div class="col-sm-3">
                <%= render 'shared/profile_navigation', locals: {link: @tab} %>
              </div>
              <div class="col-sm-9">
                <h4 class="card-form-title mt-3">
                  Help People Find You
                </h4>
                <div class="card card-form">
                  <div class="card-body">
                    <div class="form-group">
                      <label>
                        I am interested in providing mentorship and advisory services on Expercoin's on-demand learning and mentorship platform.
                      </label>
                  <label>Categories</label>
                  <%= f.collection_select :category_ids, @categories, :id, :name, {}, { multiple:"multiple", class: 'selectpicker', 'data-live-search':"true" } %>
                    </div>
                  </div>
                </div>
                <div class="center">
                  <a class="btn btn-flat-grey btn-md" href="" target="_blank">
                    Preview
                  </a>
                  <%= f.submit "Save", :class => "btn btn-flat-blue btn-md ga-track-event", 'data-loading-text' => "Saving ...", 'data-gae-category' => "Expert", 'data-gae-action' => "Update Basic Info" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
<% end %>
