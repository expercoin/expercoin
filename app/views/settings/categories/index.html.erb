<div class="profile-title-section">
  <div class="container">
    <h2 class="profile-name">
      <%= decorate(@profile).full_name %>
        <span>
          Profile
        </span>
    </h2>
  </div>
</div>
<div class="container profile-form-container d-flex">
  <%= form_with model: @profile_form, url: settings_categories_path, class: 'd-flex' do |f| %>
    <div class="row">
      <div class="col-sm-3">
        <%= render 'shared/profile_navigation', locals: {active: 'find'} %>
      </div>
      <div class="col-sm-9">
        <h4 class="card-form-title mt-3">
          Help People Find You
        </h4>
        <div class="card card-form">
          <div class="card-body">
            <div class="form-group">
              <label>
                I am interested in providing mentorship and advisory services on Expercoin's on-demand learning and mentorship platform.
              </label>
              <label>Categories</label>
              <%= f.collection_select :category_ids, @categories, :id, :name, {}, { multiple:"multiple", class: 'selectpicker', 'data-live-search':"true" } %>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-end mb-5">
          <%= f.submit "Save", :class => "btn btn-primary btn-wide" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= render 'shared/notice_box', message: 'Successfully Saved!' %>
