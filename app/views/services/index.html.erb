<% if current_user %>
  <nav class="content-nav">
    <%= render "shared/subnavbar",  url: services_path, active: "mentors"%>
  </nav>
<% end %>
<main class="content <%= 'content-with-nav' if current_user %>">
  <% if flash.any? %>
    <div id="error_explanation" class="mt-0">
      <div class="content-container">
          <ul>
            <% flash.each do |key, value| %>
              <%= content_tag :li, value, class: "flash #{key}" %>
            <% end %>
          </ul>
      </div>
    </div>
  <% end %>
  <section class="mentors-filterable">
    <div class="content-container">
      <div class="content-title">
        <h3>Top Expercoin Offerings</h3>
      </div>
      <div class="providers-with-filters">
        <div class="providers-groups">
          <div class="providers providers-panoramic">
            <% @services.each do |service| %>
              <%= render 'shared/msp/services_card', service: service, service_url: service_path(service) %>
            <% end %>
          </div>
        </div>
        <div class="mentors-filters">
          <div class="filter-group">
            <h5>Categories</h5>
            <% @categories.each do |category| %>
              <%= link_to category.name, category_path(category) %>
            <% end %>
          </div>
        </div>
      </div>
      <%= paginate @services %>
    </div>
  </section>
</main>

