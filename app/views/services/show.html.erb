<main class="content">
  <header class="content-container">
    <div class="content-main service-header">
      <div class="service-info">
        <h1><%= @service.title %></h1>
        <ol class="breadcrumb services-breadcrumb">
          <li class="breadcrumb-item"><%= link_to @service.category.parent.name, category_path(@service.category.parent) %></li>
          <li class="breadcrumb-item"><%= link_to @service.category.name, category_subcategory_path(@service.category.parent, @service.category) %></li>
        </ol>
      </div>
    </div>
  </header>
  <section class="content-container content-with-aside">
    <div class="content-main">
      <div class="panel panel-service">
        <div class="panel-header">
          <div class="service-rating-and-prices">
            <div class="rating">
              <%= decorate(@service).rating %>
              <%= display_stars(decorate(@service).rating) %>
            </div>
            <div class="pricing" data-container="body" data-toggle="popover" data-placement="left" data-content="<%= decorate(@service).starting_price_full %>" data-trigger="hover">
              <span class="text">Starting at</span>
              <span class="value"><%= decorate(@service).starting_price %></span>
            </div>
          </div>  
        </div>
        <div class="panel-hero">
          <%= image_tag @service.cover_image.medium.url %>
        </div>
        <div class="panel-body">
          <%= @service.content.html_safe %>
        </div>
      </div>
      <div class="service-experts">
        <h3>Services Experts</h3>
        <% @providers.each do |provider| %>
          <%= render 'shared/msp/horizontal_profile_card_two', mentor: provider, request_url: new_request_path(expert: provider.slug, service: @service.slug)  %>
        <% end %>
      </div>
    </div>
    <div class="content-aside">
      <%= render 'shared/msp/profile_card', profile: @featured_provider, request_url: new_request_path(expert: @featured_provider.slug, service: @service.slug)  %>
    </div>
  </section>
</main>

