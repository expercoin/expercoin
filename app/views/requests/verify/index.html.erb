<nav class="content-nav">
  <%= render "shared/subnavbar", active: "requests" %>
</nav>
<main class="content content-with-nav">
  <section class="verify-transaction">
    <div class="content-container content-container-narrow">
      <div class="content-title">
        <h3>Verify Call Session</h3>
      </div>
      <div class="request-transaction">
        <div class="transaction-info">
          <p>Please send amount of <%= "#{ENV['CURRENCY']} #{@eth_amount}" %> to the following ETH address:</p>
          <p class="eth-address">
          <%= ENV['ETH_ADDRESS'] %>
          </p>
          <p>Price in USD: <%= number_to_currency(@usd_amount) %></p>
          <div id='output' data-transaction-screen></div>
        </div>
        <div class="transaction-verification">
          <h4>Transaction ID</h4>
          <%= form_with scope: :verify do |f| %>
            <div class="form-group">
              <%= f.text_field :tx_hash, class: 'form-control', 'data-tx-hash': true %>
            </div>
            <%= f.submit 'Verify', class: 'btn btn-success btn-md btn-md-lgr', 'data-verify-button':'' %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</main>
<%= render 'shared/notice_box', message: @error_message, type: 'error', name: '' %>
<%= render 'shared/eth/eth_transaction_trigger', amount: @eth_amount %>